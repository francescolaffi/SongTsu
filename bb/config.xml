<widget xmlns="http://www.w3.org/ns/widgets"
		xmlns:rim="http://www.blackberry.com/ns/widgets"
		version="1.0.0"
		id="OWhymcaHack">

	<name>Whymca hackreality 2</name>
	<author>I BonziEmiliani : Lucio - Stefano - Francesco - Yuri</author>
	<icon src="images/iconWhite.png"/>
	<content src="index.html" />

	<rim:navigation mode="focus" />
        <access uri="*" subdomains="true" />
        <feature id="blackberry.app" >
           <param name="websecurity" value="disable" />
        </feature>
	<feature id="blackberry.connection" />
	<feature id="blackberry.app.event" />
	<feature id="blackberry.ui.toast" />
        <feature id="blackberry.sensors" />
	
	<rim:permissions>
	   <rim:permit>read_geolocation</rim:permit>
           <rim:permit>access_location_services</rim:permit>		
	</rim:permissions>
</widget>